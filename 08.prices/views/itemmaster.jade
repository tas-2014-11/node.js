extends layout

h1 Item Master

block content
  table(class='itemmastertable')
    thead
      tr
        th Name
        th Rarity
        th Tier
        th Type
        th Subtype
        th Value
        th Value (Gems)
        th Value (Karma)
        th Used By
        th Level
        th Aquisition
    tbody
      - each item in items
        tr
          td
            a(href='/item/edit/' + item._id.toHexString())= item.name
          td(class='rarity'+item.rarity)= item.rarity
          td= item.tier
          td= item.type
          td= item.subtype
          td= item.value
          td= item.value_gems
          td= item.value_karma
          td= item.usedby
          td= item.level
          td= item.aquisition
    tfoot


block footer
  a(class='bigbutton',href='/item/new') New Item
  a(class='bigbutton',href='/item/list') List Items
  a(class='bigbutton',href='/item/export') Export Items
