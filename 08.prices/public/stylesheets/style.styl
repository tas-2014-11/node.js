html
  border none
  margin 0
  padding 0
body
  font-family 'Trebuchet MS'
  font-size 11pt
  color #000
  background-color #aaa
a
  color #000
  text-decoration none
  cursor pointer
table
  border-collapse collapse

.footer
  padding 8px 0 0 8px
.footer a
  color #000
  border 1px solid #444
  border-radius 6px
  text-decoration none
  padding 2px 6px
  margin 0 4px

.itemdetailtable td
  border 1px solid black
  padding 2px 4px

.itemmastertable thead
  border-bottom 3px solid black
.itemmastertable td,.itemmastertable th
  border 1px solid black
  padding 2px 4px

.newitemtable tr
  border 1px solid black
.newitemtable td
  border none
div.submit
  padding 10px 2px 10px 4px
.labeltd
  text-align right
  padding 8px 2px 8px 4px
label:after
  content ':'
.raritytd
  border none
  padding 12px
.center
  text-align center
.subsubtype
  color #000
.select
  border 1px solid black
  color white
  background-color #222
  margin 2px
.textinput
  font-family 'Trebuchet MS'
  font-size 11pt
  border 2px solid #666
  color #ffc
  background-color #000
  margin 6px
  width 16em
.dateinput
  width 20em
.textinputunused
  background-color #ffc
.onblack
  background-color black
.whiteonblack
  color #ffc
  background-color black
.bigbutton
  color #000
  background-color #999
  padding 2px 6px
  border-radius 6px
  border 2px solid #666
  margin 0px 2px 2px 0px
  display inline-block
  text-align center
.clearbutton
  color #000
.submitbutton
  font-family 'Trebuchet MS'
  font-size 11pt
tr.quiet
  border none
.hidden
  display none
  

.rarity
  color #ffc
  background-color black
.rarityJunk
  color gray
.rarityBasic
  color white
.rarityFine
  color blue
.rarityMasterwork
  color green
.rarityRare
  color yellow
.rarityExotic
  color gold
.rarityLegendary
  color red
.rarityMystic
  color purple


.overview
  border none
  border-collapse collapse
  font-family Verdana
  font-size 10pt
.type
  display table
.typelabel
  font-weight bold
  font-size 11pt
  margin 6px
  margin-top 32px
.tier
  display table-row
.tierlabel
  border 1px solid black
  padding 6px
  display table-cell
  font-weight bold
  text-align center
  border-right 3px solid black
  background-color #888
.subtype
  border 1px solid black
  display table-cell
.bottomborder
  border-bottom 3px solid black
  background-color #888
.subtypelabel
  color black
  font-weight bold
  display table-cell
  padding 3px
.name
  color black
  padding 3px

.newordertable tr
  border 1px solid black
.newordertable tr.quiet
  border none
.newordertable td
  border 1px solid black
  padding 2px 4px
